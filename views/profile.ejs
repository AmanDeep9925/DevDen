<h1>
  Manage your Profile
</h1>

<img src="<%= user.avatar %> " alt="<%= user.name %> " srcset="" width="100 ">

<% if (user.id == profileUser.id) { %>

<!-- If user matches then show the form -->
<form action="/users/update/<%= profileUser.id %> " method="post" enctype="multipart/form-data">
  <input
    type="text"
    name="name"
    placeholder="Your Name"
    value="<%= profileUser.name %> "
  />
  <input
    type="text"
    name="email"
    placeholder="Your Email"
    value="<%= profileUser.email %> "
    required
  />
  <input type="file" name="avatar" id="profilePic" placeholder="Profile picture">
  <button type="submit" value="Update">Update</button>
</form>

<% } else { %>
<!-- else shows the user info -->

<p style="color: white;">
  <%= profileUser.name %>
</p>

<p style="color: white;">
  <%= profileUser.email %>
</p>

<% } %>
